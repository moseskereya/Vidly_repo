@model IEnumerable<Vidly.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="pb-4 m-4">
    <form asp-action="Index" method="get">
        <div class="form-actions no-color">
            Find by title 
            <input  type="text"  name="Search" value="@ViewData["CurrentSearch"]"/>
            <input type="submit"  value="Search" class="btn btn-default"/> | <a asp-action="Index">Back to Full List</a>
        </div>
    </form>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">
                <img class="img-thumbnail" src="@item.Image" alt="@item.Title" />
            </a>
            <div class="movie_preview">
                <h5>
                    @item.Maker
                </h5>
            </div>
        </div>
    }

</div>
